{% extends 'base.html.twig' %}

{% block title %} Connexion au site {% endblock %}

{% block body %}


<div class="container">

    <div class="row">
        <div class="col-md-3">&nbsp;</div>
        <div class="col-md-6">
        <h1>Connectez vous !</h1>

        {% if hasError %}
            <div class="alert alert-danger">Une erreur est survenue, le nom d'utilisateur ou alors le mot de passe est invalide</div>
        {% endif %}

            <div class="bg-light py-3 px-3">

{# C'est SYMFONY qui va gérer lui même le traitement des données du formulaire 
avec le fichier de config/packages/security.yaml #}
        <form action="{{ path('account_login') }}" method="post">

            <div class="form-group">
            <label for="email">Email</label>
            {# Symfony impose _username pour le nom du champ de l'email #}
            <input type="text" name="_username" id="email" class="form-control" required value="{{username}}">
            </div>

            <div class="form-group">
            <label for="email">Mot de passe</label>
            {# Symfony impose _password pour le nom du champ du pasword #}
            <input type="text" name="_password" id="password" class="form-control" required>
            </div>

            <div class="form-group">
            <button type="submit" class="btn btn-success">Connexion !</button>
            </div>

</form>
            </div>
        </div>
    </div>
</div>

{% endblock %}
